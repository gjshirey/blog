<html>

<%- include('layouts/header'); -%>

<body class="left-sidebar is-preload">
    <div id="page-wrapper">

        <!-- Header Wrapper -->
        <div id="header-wrapper">
            <div class="container">

                <%- include('layouts/navbar'); -%>


            </div>
        </div>

        <!-- Main Wrapper -->
        <div id="main-wrapper">
            <div class="wrapper style2">
                <div class="inner">
                    <div class="container">
                        <section>
                            <h2>Create A New Post</h2>
                            <div>
                                <div class="row">
                                    <div class="col-6 col-12-small">
                                        <dl class="contact">
                                            <form action="/posts/store" method="POST" enctype="multipart/form-data">
                                                <dt>Title</dt>
                                                <dd><input type="text" id="title" name="title"></dd>
                                                <dt>Description</dt><br>
                                                <dd><textarea rows="3" cols="100" class="form-control" id="body"
                                                        name="body"></textarea></dd>
                                                <div class="control-group">
                                                    <div class="form-group floating-label-form-group controls">
                                                        <label>Image</label>
                                                        <input type="file" class="form-control" id="image" name="image">
                                                    </div>
                                                </div>
                                                <dt><button type="submit" class="button"
                                                        id="sendMessageButton">Send</button></dt>
                                            </form>

                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Wrapper -->
    <%- include('layouts/footer'); -%>

    </div>

    <!-- Scripts -->
    <%- include('layouts/scripts'); -%>
</body>

</html>