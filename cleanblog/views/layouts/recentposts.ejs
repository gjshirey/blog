<!-- Made Template for other pages-->
<section class="box article-list">
    <h2 class="icon fa-file-alt">Recent Posts</h2>
    <% for (let i = 0; i < blogposts.length; i++) { %>
    <!-- Excerpt -->
    <article class="box excerpt">
        <a href="#" style="width: 200px" class="image left"><img src="<%= blogposts[i].image %>" alt="" /></a>
        <div>

            <header>
                <span class="date"><%= blogposts[i].datePosted.toDateString() %>
                    by <%=blogposts[i].userid.username %></span>
                <a href="/post/<%= blogposts[i]._id %>">
                    <h3>
                        <%= blogposts[i].title %>
                    </h3>
                </a>
            </header>
            <p><%= blogposts[i].body %></p>
        </div>
    </article>
    <% } %>
</section>